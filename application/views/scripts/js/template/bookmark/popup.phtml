<script id="bookmark_popup" type="text/x-jquery-tmpl">
    <div data-has_reminder="{{if $item.hasReminderContent()}}1{{else}}0{{/if}}" data-id="${$item.getID()}" class="bookmark_popup">
      <div class="bookmark_popup_inner">
        <div class="yellow">
          <a href="<?php echo $this->baseUrl('event');?>/${slug_name}" target="_blank" class="title">${name}</a>
          <?php /*<p class="info_line">
            Music | Dec 23, 2013, 9:00 | City Hall
          </p>*/ ?>
            <ul class="info_line">
              {{if $item.hasMainCat() }}
              <li>
                  <a target="blank" href="${$item.getMainCatURL()}"><strong>${$item.getMainCatName()}</strong></a>
              </li>
              {{/if}}
              {{if begin_datetime}}
                  {{if $item.hasMainCat() }}
                  <li>
                      |
                  </li>
                  {{/if}}
              <li>
                  start: ${$item.formatMysqlDate($data.begin_datetime)}
              </li>
              {{/if}}
              {{if place}}
                  {{if $item.hasMainCat() || begin_datetime}}
              <li>
                  |
              </li>
                  {{/if}}
              <li>
                  place: 
                  {{if degree}}
                      <a href="#" title="${degree}&deg;"><img class="direction-arrow ${degree}" height="10" src="<?php echo $this->baseUrl('images/direction-arrow.jpg');?>" /></a>
                  {{/if}}
                  {{if place_lat && place_lng}}<a class="place" data-coord="${place_lat},${place_lng}" title="${place}" href="#">{{else}}<span class="place">{{/if}}${place}{{if place_lat && place_lng}}</a>{{else}}</span>{{/if}}
              </li>
              {{/if}}
          </ul>
          <div class="clr"></div>
          <p class="teaser">
             ${teaser}
          </p>
        </div>
        <a {{if $item.hasReminderContent()}}style="display:none"{{/if}}  class="bookmark_popup_set_reminder" href="#" data-value="0">Set Reminder...</a>
        <div class="white" {{if $item.hasReminderContent()}}style="display:block"{{/if}} >
          <form class="bookmark_popup_form" data-id="${id}" name="bookmark_popup_form" action="" method="post" >
            <input type="hidden" name="event_reminder_item_id" class="bookmark_popup_reminder_title" value="${id}"/>
            <input type="text" name="event_reminder_title" class="bookmark_popup_reminder_title" value="{{if reminder_title}}${reminder_title}{{/if}}"/>
            <textarea name="event_reminder_description" class="bookmark_popup_reminder_detail" >{{if reminder_description}}${reminder_description}{{/if}}</textarea>
            {{if reminder_tags}}
            <br />
              <?php echo $this->translate('Tags')?>: ${reminder_tags}
            {{/if}}
            {{if reminder_attend_datetime}}
            <br />
              <?php echo $this->translate('Attend datetime')?>: ${reminder_attend_datetime}
            {{/if}}
            {{if reminder_has_email_alarm}}
            <br />
              <?php echo $this->translate('Email alert')?>: ${$item.getAlertTime('email')}
            {{/if}}
            {{if reminder_has_popup_alarm}}
            <br />
              <?php echo $this->translate('Popup alert')?>: ${$item.getAlertTime('popup')}
            {{/if}}
            {{if reminder_has_mobile_alarm}}
            <br />
              <?php echo $this->translate('Mobile alert')?>: ${$item.getAlertTime('mobile')}
            {{/if}}
          </form>
          <a class="bookmark_popup_more_reminder_fields" href="#">More reminder fields....</a>
          <div class="reminder_save_status">
            <span class="saving"><?php echo $this->translate('Saving...')?></span>
            <span class="saved"><?php echo $this->translate('Saved')?></span>
          </div>
        </div>
        <div class="clr"></div>
      </div>
    </div>
</script>